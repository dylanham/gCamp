= render partial: "shared/error", locals: {object: @user, offset_option: 'col-md-offset-2'}
= form_for(@user, html: {class: 'form-horizontal'}) do |f|
  .form-group
    = f.label :first_name,'First Name', class: 'control-label col-md-2'
    .col-md-4
      = f.text_field :first_name, class: 'form-control'
  .form-group
    .text-left
    = f.label :last_name, 'Last Name', class: 'control-label col-md-2'
    .col-md-4
      = f.text_field :last_name, class: 'form-control'
  .form-group
    = f.label :email, 'Email', class: 'control-label col-md-2'
    .col-md-4
      = f.email_field :email, class: 'form-control'
  .form-group
    = f.label :password, class: 'control-label col-md-2'
    .col-md-4
      = f.password_field :password, class: 'form-control'
  .form-group
    = f.label :password_confirmation,'Password Confirmation', class: 'control-label col-md-2'
    .col-md-4
      = f.password_field :password_confirmation, class: 'form-control'
  .form-group
    .col-md-6.col-md-offset-2
      = f.submit class:'btn btn-primary'
      = link_to 'Cancel', users_path, class: 'btn btn-default'
