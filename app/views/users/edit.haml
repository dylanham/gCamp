.page-header
  .row
    .col-md-12
      .pull-right

      %h1 Edit User
.row
  .col-md-12
    %ol.breadcrumb
      %li= link_to 'Users',users_path
      %li= link_to "#{@user.first_name} #{@user.last_name}".titleize, user_path(@user)
      %li.active Edit
= render 'form'
.row
  .col-md-3.col-md-offset-2.text-center
    .well= link_to 'Delete User',user_path(@user), class:'btn btn-danger',method: :delete
