.page-header
  .pull-right
    = link_to 'New User', new_user_path, class:'btn btn-info'
  %h1 Users
%table.table
  %thead
    %tr
      %th{colspan: 1} Name
      %th{colspan: 2} Email
  %tbody
    - @users.each do |user|
      %tr
        %td.col-md-1= link_to user.full_name ,user_path(user)
        %td.col-md-1
          - if current_user.admin || current_user.project_member_of(user)
            = mail_to user.email.downcase
        %td.col-md-2.text-right
          - if current_user.id == user.id || current_user.admin
            = link_to 'Edit', edit_user_path(user)
