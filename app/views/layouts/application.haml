!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Gcamp
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          = link_to "gCamp", root_path, class:"navbar-brand"
    .container
      - if flash[:notice]
        .alert.alert-success
          = flash[:notice]
      = yield
    %footer
      .container
        .page-header
        .row
          .col-md-6
            = link_to "About", about_path
            |
            = link_to "terms", terms_path
            |
            = link_to "FAQ", faq_path
            |
            = link_to "Tasks", tasks_path
            |
            = link_to "Users", users_path
          .col-md-6
            = link_to image_tag("galvanize.png", class:"footer-img"), "https://students.gschool.it/cohorts/8/students/280"
            = link_to image_tag("twitter.png", class:"footer-img"), "https://twitter.com/dylanjham"
            = link_to image_tag("GitHub.png", class:"footer-img"), "https://github.com/dylanham"
            = link_to image_tag("linked_in.jpg", class:"footer-img"), "https://www.linkedin.com/pub/dylan-ham/77/895/532"
