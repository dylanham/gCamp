.well.col-md-6.col-md-offset-3
  .page-header
    %h3 Sign up for gCamp!
  - if @user.errors.any?
    - @user.errors.full_messages.each do |message|
      %h5.text-danger= message
  = form_for(@user, url: sign_up_path, html: {class: 'form'}) do |f|
    .form-group
      = f.label :first_name,'First Name', class: 'control-label'
      = f.text_field :first_name, class: 'form-control'
    .form-group
      = f.label :last_name, 'Last Name', class: 'control-label'
      = f.text_field :last_name, class: 'form-control'
    .form-group
      = f.label :email, 'Email', class: 'control-label'
      = f.email_field :email, class: 'form-control'
    .form-group
      = f.label :password, class: 'control-label'
      = f.password_field :password, class: 'form-control'
    .form-group
      = f.label :password_confirmation,'Password Confirmation', class: 'control-label'
      = f.password_field :password_confirmation, class: 'form-control'
    .form-group
      = f.submit 'Sign Up', class:'btn btn-default'
