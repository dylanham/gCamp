<div class ="container">
  <div class ="page-header">
    <h1>New Task </h1>
  </div>
  <ol class="breadcrumb">
    <li><%= link_to 'Tasks',tasks_path %></li>
    <li class="active">New Task</li>
  </ol>

      <%= form_for(@task, html: {class: 'form-horizontal'}) do |f| %>
    <div class= "form-group">
      <%= f.label :description, class: 'col-md-1 control-label'%>
      <div class="col-md-3">
      <%= f.text_field :description, class: 'form-control' %>
      </div>
    </div>

  <div class= "form-group">
    <div class= "col-md-6 col-md-offset-1">

      <%= f.submit "Create Task", class: 'btn btn-primary' %>
      <% end %>
      <%= link_to 'Cancel', tasks_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
