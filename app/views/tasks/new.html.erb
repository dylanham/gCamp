<div class ="container">
  <div class ="page-header">
  <h1>New Task </h1>
  </div>
  <div class= "form-group">
    <div class= "row">
      <div class= "col-md-12">
      <%= form_for(@task, html: {class: 'form-horizontal'}) do |f| %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      </div>
    </div>
      <%= f.submit "Create Task", class: 'btn btn-primary' %>
      <% end %>
      <%= link_to 'Cancel', tasks_path, class: 'btn btn-default' %>
    </div>
</div>
