.page-header
  .row
    .col-md-12
      .pull-right
        %h1= link_to 'Edit',edit_project_task_path(@project, @task), class:'btn btn-info'
      - if @task.complete
        %h1
          %s=@task.description.downcase.titleize
      - else
        %h1= @task.description.downcase.titleize
.row
  .col-md-12
    %ol.breadcrumb
      %li= link_to 'Tasks',project_tasks_path(@project)
      %li.active= @task.description
.row
  .col-md-12
    %p
      %strong Due Date:
      -if @task.due_date
        = @task.due_date.strftime("%m/%d/%Y")
