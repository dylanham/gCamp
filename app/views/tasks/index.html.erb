<div class ="container">
  <div class ="page-header">
    <div class ="row">
      <div class ="col-md-12">
        <div class ="pull-right">
          <h1><%= link_to 'New Task', new_task_path, class:'btn btn-info' %></h1>
        </div>
        <h1>Listing Tasks </h1>
      </div>
    </div>
  </div>

  <p><strong>Description</strong></p>
  <% @tasks.each do |task| %>
  <table class="table">
    <tr>
      <td><%= link_to task.description,task_path(task) %>
        <div class="pull-right">
          <%= link_to 'Destroy', task_path(task),   class: 'btn btn-danger', method: :delete %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-info' %>
        </div>
      </td>
    </tr>
  <% end %>
  </table>



</div>
