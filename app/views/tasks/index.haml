.page-header
  .pull-right
    = link_to 'New Task', new_project_task_path, class:'btn btn-info'
  %h1 Tasks
%table.table
  %thead
    %tr
      %th{colspan: 1} Description
      %th{colspan: 2} Due Date
  %tbody
    - @tasks.each do |task|
      %tr
        - if task.complete
          %td.col-md-1
            %s= link_to task.description, project_task_path(task.project_id, task)
        - else
          %td.col-md-1= link_to task.description, project_task_path(task.project_id, task)
        %td.col-md-2= task.due_date.try(:strftime, "%m/%d/%Y")
        %td.col-md-2.text-right
          = link_to 'Edit', edit_project_task_path(task.project_id, task), class: 'btn btn-info'
          = link_to 'Delete', project_task_path(task.project_id, task), class: 'btn btn-danger', method: :delete
